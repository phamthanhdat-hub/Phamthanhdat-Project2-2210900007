@model IEnumerable<K22CNT3_PhamThanhDat_Project2.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
}

<h2>Pham Thanh Dat - San Pham</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.So_luong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mo_ta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kich_thuoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mau_sac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngay_tao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trang_thai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DanhMuc.TenDanhMuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.So_luong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mo_ta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kich_thuoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mau_sac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_tao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trang_thai)
            @{ if (item.Trang_thai == 0)
                                {
                <span class="text-warning">Đang hiểm tra</span> }
                                else if (item.Trang_thai == 1)
                                {
                <span class="text-success">Đã nhập kho</span> } }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaSP }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaSP }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaSP }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
