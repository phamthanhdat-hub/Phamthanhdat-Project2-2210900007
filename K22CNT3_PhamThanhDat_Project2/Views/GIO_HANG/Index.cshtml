@model IEnumerable<K22CNT3_PhamThanhDat_Project2.Models.GIO_HANG>

@{
    ViewBag.Title = "Index";
}

<h2>Pham Thanh Dat - Gio Hang</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.So_luong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tong_tien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngay_tao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trang_thai)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KHACH_HANG.Ho_ten)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.So_luong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tong_tien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_tao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trang_thai)
            @{ if (item.Trang_thai == 0)
                                {
                <span class="text-warning">Đang hiểm tra</span> }
                                else if (item.Trang_thai == 1)
                                {
                <span class="text-success">Đã nhập kho</span> } }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KHACH_HANG.Ho_ten)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaGioHang }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaGioHang }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaGioHang }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
